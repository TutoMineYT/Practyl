<!DOCTYPE html>
<html lang="es" data-bs-theme="dark">

<head>
    <link rel="icon" type="image/png" href="/img/logo.png">
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%- (config.general.name ?? "Practyl Panel") %> | Crear servidor</title>
</head>

<body style="background-color: rgb(26, 26, 26);">

    <%- include("../parts/header.ejs") %>

        <div class="container-fluid">
            <div class="row flex-nowrap">
                <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0 bg-dark"
                    style="border-radius: 10px; height: 85vh; margin-left: 15px; width: 30vh;">
                    <%- include("../parts/sidebar.ejs") %>
                </div>
                <div class="col py-3">
                    <div
                        style="margin-top: -16px;padding: 5px; border-radius: 10px; background-color: rgb(33,37,41); height: 85vh;">
                        <div style="display: flex; justify-content: center; align-items: center; margin-top: 30px;">
                            <div style="width: 750px; height: 90px; background-color: rgb(65, 69, 69); border-radius: 15px;">
                                <center>Recursos disponibles</center>
                                <div style="display: flex; margin-left: 10px;">
                                    <span>
                                        <svg width="25" height="25" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                            <path d="M3 4m0 3a3 3 0 0 1 3 -3h12a3 3 0 0 1 3 3v2a3 3 0 0 1 -3 3h-12a3 3 0 0 1 -3 -3z"></path>
                                            <path d="M3 12m0 3a3 3 0 0 1 3 -3h12a3 3 0 0 1 3 3v2a3 3 0 0 1 -3 3h-12a3 3 0 0 1 -3 -3z"></path>
                                            <path d="M7 8l0 .01"></path>
                                            <path d="M7 16l0 .01"></path>
                                            <path d="M11 8h6"></path>
                                            <path d="M11 16h6"></path>
                                         </svg>
                                         <b>Servidores:</b> <%= (req.session.user.limits.maxSERVER) - (req.session.user.used.server) %>/<%= req.session.user.limits.maxSERVER %>
                                    </span>
                                    <span style="padding-left: 15px;">
                                        <svg width="25" height="25" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                            <path d="M5 5m0 1a1 1 0 0 1 1 -1h12a1 1 0 0 1 1 1v12a1 1 0 0 1 -1 1h-12a1 1 0 0 1 -1 -1z"></path>
                                            <path d="M9 9h6v6h-6z"></path>
                                            <path d="M3 10h2"></path>
                                            <path d="M3 14h2"></path>
                                            <path d="M10 3v2"></path>
                                            <path d="M14 3v2"></path>
                                            <path d="M21 10h-2"></path>
                                            <path d="M21 14h-2"></path>
                                            <path d="M14 21v-2"></path>
                                            <path d="M10 21v-2"></path>
                                         </svg>
                                         <b>CPU:</b> <%= (req.session.user.limits.maxCPU) - (req.session.user.used.cpu) %>%/<%= req.session.user.limits.maxCPU %>%
                                    </span>
                                    <span style="padding-left: 15px;">
                                        <svg width="25" height="25" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                            <path d="M3 12l3 3l3 -3l-3 -3z"></path>
                                            <path d="M15 12l3 3l3 -3l-3 -3z"></path>
                                            <path d="M9 6l3 3l3 -3l-3 -3z"></path>
                                            <path d="M9 18l3 3l3 -3l-3 -3z"></path>
                                         </svg>
                                         <b>RAM:</b> <%= (req.session.user.limits.maxRAM) - (req.session.user.used.ram) %>MB/<%= req.session.user.limits.maxRAM %>MB
                                    </span>
                                    <span style="padding-left: 15px;">
                                        <svg width="25" height="25" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                            <path d="M6 4h10l4 4v10a2 2 0 0 1 -2 2h-12a2 2 0 0 1 -2 -2v-12a2 2 0 0 1 2 -2"></path>
                                            <path d="M12 14m-2 0a2 2 0 1 0 4 0a2 2 0 1 0 -4 0"></path>
                                            <path d="M14 4l0 4l-6 0l0 -4"></path>
                                         </svg>
                                         <b>DISCO:</b> <%= (req.session.user.limits.maxDISK) - (req.session.user.used.disk) %>MB/<%= req.session.user.limits.maxDISK %>MB
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div style="display:flex; justify-content: center; align-items: center; padding-top: 5%;">
                            <div
                                style="width: 460px; height: 440px; background-color: rgb(65, 69, 69); border-radius: 15px;">
                                <center>
                                    <h2 style="margin-top: 30px;">Crear servidor</h2>
                                </center>
                                <div id="formCreate">
                                    <form style="padding: 20px; padding-bottom: 5px;">
                                        <div class="mb-3">
                                            <input type="text" class="form-control" id="nameCreate" autocomplete="off"
                                                placeholder="Nombre">
                                        </div>
                                        <div class="mb-3">
                                            <div style="display: flex;">
                                                <input type="number" class="form-control" id="cpuCreate"
                                                    autocomplete="off" style="width: 130px;" placeholder="CPU (%)">
                                                <input type="number" class="form-control" id="ramCreate"
                                                    autocomplete="off" style="width: 140px; margin-left: 5px;"
                                                    placeholder="RAM (MB)">
                                                <input type="number" class="form-control" id="diskCreate"
                                                    autocomplete="off" style="width: 140px; margin-left: 5px;"
                                                    placeholder="DISCO (MB)">
                                            </div>
                                        </div>
                                        <div class="mb-3">
                                            <select id="typeCreate" class="form-select"
                                                aria-placeholder="Select a type">
                                                <% eggs.forEach(egg=> { %>
                                                    <option value="<%= egg.display %>">
                                                        <%= egg.display %>
                                                    </option>
                                                    <% }) %>
                                            </select>
                                        </div>
                                        <div style="padding-top: 120px;">
                                            <button id="btnCreate" onclick="create()" class="btn btn-primary"
                                                style="width: 100%;">Crear Servidor</button>
                                        </div>

                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

</body>
<script src="/js/create.js"></script>

</html>