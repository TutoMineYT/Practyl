                        <div style="text-align: center; width: 100%;">
                            <button
                            style="height: 10%; width: 80%; border: none; border-radius: 20px; background-color: green;"
                            id="save">Guardar Configuracion</button>
                        </div>
                    </div>
                </div>
            </div>

</body>

<script src="/js/admin/tienda.js"></script>

</html>